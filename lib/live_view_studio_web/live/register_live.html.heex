<div class="auth">
  <h1>Live Register</h1>
  <.form let={f} for={@changeset}
    url={Routes.user_registration_path(@socket, :create)}
    id="create-desk"
    phx-submit="save"
    phx-change="validate"
    phx-trigger-action={@trigger_submit} %>
    <%= label f, :email %>
    <%= email_input f, :email, required: true %>
    <%= error_tag f, :email %>

    <%= label f, :password %>
    <%= password_input f, :password, required: true,
                       value: input_value(f, :password) %>
    <%= error_tag f, :password %>

    <div>
      <%= submit "Register", phx_disable_with: "Registering..." %>
    </div>
  </.form>

  <p>
    <%= link "Log in", to: Routes.user_session_path(@socket, :new) %> |
    <%= link "Forgot your password?", to: Routes.user_reset_password_path(@socket, :new) %>
  </p>
</div>
